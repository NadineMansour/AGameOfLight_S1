<div class="row">
  <div class="col-md-2">
    <div class="list-group" width="70px;">
   
    <%= link_to controller: "students", action: "view_courses"  do %>
        <i class="list-group-item">View Courses</i> 
    <% end %>
    </div>
  </div>
  <div class="col-md-8">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Code</th>

          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
      
        <% @subjects.each do |subject| %>
          <tr>
         
            <td><%= subject.name %></td>
            <td><%= subject.code %></td>            
            <td><%= link_to 'Show', show_course_students_path(subject_id: subject[:id]) %></td>
             <td>   <%= form_tag("/students/" + 
              "/view_course_teachers/" + subject[:id].to_s, method: :get)  do %>
                <%= button_tag(type: "submit",  class:"btn btn-theme") do %>
                    View teachers
                <% end %>
              <% end %></td>
        
          </tr>
        <% end %> 
        
      </tbody> 

     </table>
  </div>
  </div>









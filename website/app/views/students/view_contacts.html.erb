<div class="row">
  <div class="col-md-2">
      <%= render partial: "menu_student" %>
  </div>
  <div class="col-md-8">
    <br>
    <div class="content-panel">
    <h4><i class="fa fa-angle-right"></i> My contacts</h4><hr>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th> View messages </th>

          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
      
        <% @students.each do |student| %>
          <tr>
             
            <td><%= student.student_name %></td>
            <td><%= student.email %></td>  
              <td>
          <%= form_tag("/students/" +
          "/view_messages/" + student[:id].to_s, method: :get) do %>
         <%= button_tag(type: "submit", class: "btn btn-theme03") do %>
             View
            <% end %>
          <% end %>          
        
            </td>
            </tr>
        <% end %> 

        
      </tbody> 

     </table>
     </div>
  </div>
  </div>



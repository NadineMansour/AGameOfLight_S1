<div class="row">
  <div class="col-md-2">
    <div class="list-group" width="70px;">
   
    <%= link_to controller: "students", action: "view_courses"  do %>
        <i class="list-group-item">View Courses</i> 
    <% end %>
    </div>
  </div>
  <div class="col-md-8">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>

          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
      
        <% @teachers.each do |teacher| %>
          <tr>
         
            <td><%= teacher.teacher_name %></td>
            <td><%= teacher.email %></td>            
         <td>   <%= form_tag("/students/" + 
							"/send_message/" + teacher[:id].to_s, method: :put)  do %>
								<%= button_tag(type: "submit",class:"btn btn-theme") do %>
							    	Send message
								<% end %>
							<% end %></td>
            
            </tr>
        <% end %> 
        
      </tbody> 

     </table>
  </div>
  </div>



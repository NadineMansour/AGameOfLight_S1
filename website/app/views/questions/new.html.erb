<div id="sidebar" class="nav-collapse " tabindex="5000" style="overflow: hidden; outline: none;">
  <ul class="sidebar-menu" id="nav-accordion">
    <h5 class="centered"><%= current_teacher.email %></h5>
        <li class="sub-menu dcjq-parent-li">
            <%= link_to controller: "students", action: "view_courses", class: 'dcjq-parent' do %>
              <span>School Courses</span>
            <% end %>
            <%= link_to controller: "students", action: "view_contacts", class: 'dcjq-parent' do %>
              <span>View Contacts</span>
                <%end%>
        </li>
    </ul>
</div>

<section id="main-content">
  <section class="wrapper">
   <h3><i class="fa fa-angle-right"></i> New Question</h3>

   <!-- BASIC FORM ELELEMNTS -->
    <div class="row mt">
      <div class="col-lg-12">

        <div class="form-panel">
         <h4 class="mb"><i class="fa fa-angle-right"></i> Question</h4>
          <%= form_for @question, html: {class: 'form-horizontal style-form'} do |f| %>
            <div class="form-group">
              <%= f.label :body, class: 'col-sm-2 col-sm-2 control-label'%>
              <div class="col-sm-10">
                <%= f.text_field :body, placeholder: 'Question Body', class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :subject, class: 'col-sm-2 col-sm-2 control-label'%>
              <div class="col-sm-10">
                <%= f.collection_select :subject_id, @subjects, :id, :name, include_blank: true%>
              </div>
            </div>

            <h4 class="mb"><i class="fa fa-angle-right"></i> Answers</h4>
            <div class="form-group has-success">
              <%= f.label :correct_answer, class: 'col-sm-2 control-label col-lg-2', for: 'inputSuccess'%>
              <div class="col-lg-10">
                <%= f.text_field :correct_answer, placeholder: 'Correct Answer', class: 'form-control', id: 'inputSuccess'%>
              </div>
            </div>
            <div class="form-group has-error">
              <%= f.label :wrong_answer, class: 'col-sm-2 control-label col-lg-2', for: 'inputError'%>
              <div class="col-lg-10">
                <%= f.text_field :wrong_answer_one, placeholder: 'Wrong Answer', class: 'form-control', id: 'inputError'%>
              </div>
            </div>
            <div class="form-group has-error">
              <%= f.label :wrong_answer, class: 'col-sm-2 control-label col-lg-2', for: 'inputError'%>
              <div class="col-lg-10">
                <%= f.text_field :wrong_answer_two, placeholder: 'Wrong Answer', class: 'form-control', id: 'inputError'%>
              </div>
            </div>
            <div class="form-group has-error">
              <%= f.label :wrong_answer, class: 'col-sm-2 control-label col-lg-2', for: 'inputError'%>
              <div class="col-lg-10">
                <%= f.text_field :wrong_answer_three, placeholder: 'Wrong Answer', class: 'form-control', id: 'inputError'%>
              </div>
            </div>

            <%= f.submit 'Create', class: 'btn btn-theme' %>
          <% end %>
        </div>
      </div><!-- col-lg-12-->      	
    </div><!-- /row -->
  </section><!-- wrapper -->
</section><!-- main-content -->
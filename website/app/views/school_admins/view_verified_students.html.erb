</div>
<div class="row">
  <div class="col-md-2">
    <%= render partial: 'menu_school_admin' %>
  </div>
  <div class="col-md-8">
    <div class="content-panel">
        <h4><i class="fa fa-angle-right"></i> Verified Students</h4><hr>
        <table class="table table-striped table-advance table-hover">
		    <thead>
	            <tr>
	                <th>Name</th>
	                <th>Email</th>
	                <th>Grade</th>
	                <th>Class</th>
	                <th>School</th>
	                <th>Remove</th>
	            </tr>
	        </thead>
	        <tbody>
	        	<% @students.each do |student| %>
		            <tr>
		                <td><%= student[:student_name] %></td>
		                <td><%= student[:email] %></td>
		                <td><%= student[:grade] %></td>
		                <td><%= student[:student_class] %> </td>
		                <td><%= student[:school] %></td>
		                <td>
			                <%= form_tag("/school_admins/" + 
							"/remove_verified_student/" + student[:id].to_s, method: :put)  do %>
								<%= button_tag(type: "submit", class: "btn btn-danger btn-xs") do %>
							    	<i class="fa fa-trash-o "></i>
								<% end %>
							<% end %>
		                </td>
		            </tr>
	            <% end %>
	        </tbody>
    	</table>
    </div><!-- /content-panel -->
  </div>
</div>











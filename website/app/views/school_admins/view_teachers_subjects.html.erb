<div class="row">
  <br>
  <br>
  <br>
</div>
<div class="row">
  <div class="col-md-2">
    <%= render partial: 'menu_school_admin' %>
  </div>
  <div class="col-md-8">
     <table class="table table-hover">
         
         <thead>
            <tr>
               <th>Name</th>
               <th>Email</th>
               
            </tr>
         </thead>
         <tbody>
           <% @verified_teachers.each do |s| %>
             <% @subjects_requests_verified = TeacherRequestSubject.where("teacher_id = ? AND verified = ?", s[:id], true) %>
             <% if @subjects_requests_verified.count > 0 %>
               <tr>
               <td><%= s[:teacher_name] %></td>
               <td><%= s[:email] %></td>
               <td>
                <table class="table table-striped">
                 <thead>
                    <tr>
                       <th>Subject id</th>
                       <th>Subject name</th>
                       <th>Subject code</th>
                       <th>Remove</th>
                    </tr>
                 </thead>
                 <tbody>
                  <% @subjects_requests_verified.each do |r| %>
                    <% @subject = Subject.find(r[:subject_id]) %>
                    <tr>
                      <td><%= @subject.id %></td>
                      <td><%= @subject.name %></td>
                      <td><%= @subject.code %></td>
                      <td>
                        <%= form_tag("/school_admins/remove_teacher_subject/" + r[:id].to_s, method: :put)  do %>
                       <%= button_tag(type: "submit", class: "btn btn-primary") do %>
                           Remove
                       <% end %>
                       <% end %>
                      </td>
                    </tr>
                  <% end %>
                 </tbody>
              </table>
               </td>
               </tr>
             <% end %>
          <% end %>
       </tbody>
    </table>
  </div>
</div>
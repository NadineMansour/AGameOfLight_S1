<div class="row">
  <br>
  <br>
  <br>
</div>
<div class="row">
  <div class="col-md-2">
    <div class="list-group" width="70px;">
        <%= link_to controller: "teachers", action: "view_game_records"  do %>
          <i class="list-group-item">View game records</i> 
        <% end %> 
        <%= link_to controller: "teachers", action: "view_school_verified_students"  do %>
          <i class="list-group-item">View verified students</i> 
        <% end %>
        <%= link_to controller: "teachers", action: "view_courses"  do %>
          <i class="list-group-item">Request subject</i> 
        <% end %>  
    </div>
  </div>
  <div class="col-md-8">
    <table class="table table-hover">
       <caption>Students' records</caption>
       <thead>
          <tr>
             <th>Name</th>
             <th>Email</th>
             <th>Class</th>
             <th>Grade</th>
             <th>Records</th>
          </tr>
       </thead>
       <tbody>
         <% @students.each do |s| %>
           <% @records = Record.where(email: s[:email]) %>
           <% if @records.count > 0 %>
             <tr>
             <td><%= s[:student_name] %></td>
             <td><%= s[:email] %></td>
             <td><%= s[:student_class] %></td>
             <td><%= s[:grade] %></td>
             <td>
              
              <table class="table table-striped">
               <thead>
                  <tr>
                     <th>Level</th>
                     <th>Clicks</th>
                     <th>Score</th>
                     <th>time</th>
                     <th>logs</th>
                  </tr>
               </thead>
               <tbody>
                <% @records.each do |r| %>
                  <tr>
                    <td><%= r[:level] %></td>
                    <td><%= r[:clicks] %></td>
                    <td><%= r[:score] %></td>
                    <td><%= r[:time] %></td>
                    <td><%= r[:logs] %></td>
                  </tr>
                <% end %>
               </tbody>
            </table>
             </td>
             </tr>
           <% end %>
      <% end %>
       </tbody>
    </table>
  </div>
</div>









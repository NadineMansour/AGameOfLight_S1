<div class="row">
  <br>
  <br>
  <br>
</div>
<div class="row">
  <div class="col-md-2">
    <div class="list-group" width="70px;">
      <%= link_to controller: "teachers", action: "view_game_records"  do %>
          <i class="list-group-item">View game records</i> 
        <% end %> 
        <%= link_to controller: "teachers", action: "view_school_verified_students"  do %>
          <i class="list-group-item">View verified students</i> 
        <% end %> 
        <%= link_to controller: "teachers", action: "view_courses"  do %>
          <i class="list-group-item">Request subject</i> 
        <% end %> 
        <%= link_to controller: "teachers", action: "view_students_grades_in_questions"  do %>
          <i class="list-group-item">View students' grades in questions</i> 
        <% end %>  
    </div>
  </div>
  <div class="col-md-8">
    <table class="table table-hover">
       <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Grade</th>
              <th>Class</th>
              <th>School</th>
              <th>Questions</th>
           </tr>
       </thead>
       <tbody>
         <% @students.each do |student| %>
          <% @student = Student.find(student[:id]) %>
          <% @student_questions = @student.student_answer_questions %>
          <% if @student_questions.count > 0 %>
            <tr>
              <td><% if student[:student_name] %> 
                    <%= student[:student_name] %>
                  <% else %>
                    *No name yet
                  <% end %>
              </td>
              <td><%= link_to student[:email], view_students_grades_in_questions_teachers_path(student_id: student[:id]) %> </td>
              <td><%= student[:grade] %> </td>
              <td><%= student[:student_class] %> </td>
              <td><%= student[:school] %>  </td>
              <td>
                <table class="table table-striped">
                 <thead>
                    <tr>
                       <th>Question</th>
                       <th>Subject name</th>
                       <th>Subject code</th>
                       <th>Correct answer</th>
                       <th>Wrong answer1</th>
                       <th>Wrong answer2</th>
                       <th>Wrong answer3</th>
                       <th>Student's answer</th>
                       <th>Correct/Wrong</th>
                    </tr>
                 </thead>
                 <tbody>
                  <% @student_questions.each do |sq| %>
                    <% @question = Question.find(sq[:question_id]) %>
                    <tr>
                      <td><%= @question.body %></td>
                      <% @subject = Subject.find(@question.subject_id) %>
                      <td><%= @subject.name %></td>
                      <td><%= @subject.code %></td>
                      <td><%= @question.correct_answer %></td>
                      <td><%=  @question.wrong_answer_one %></td>
                      <td><%= @question.wrong_answer_two %></td>
                      <td><%= @question.wrong_answer_three %></td>
                      <td><%= sq[:answer] %></td>
                      <td><%= sq[:correct] %></td>
                    </tr>
                  <% end %>
                  </tbody>
                  </table>
              </td>
            </tr>
          <% end %>
        <% end %>
       </tbody>
    </table>
  </div>
</div>






